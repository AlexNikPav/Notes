<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.Notes.ItemNoteCard">

    <LinearLayout style="@style/Theme.Notes.ItemNoteWrap">

        <LinearLayout style="@style/Theme.Notes.ItemNoteContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    style="@style/Theme.Notes.ItemTitleTextView"
                    tools:text="Заголовок" />
            </LinearLayout>

            <TextView
                android:id="@+id/date"
                style="@style/Theme.Notes.ItemDateTextView"
                tools:text="2021-01-01" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>